<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
<constant name="struts.devMode" value="false" />
<package name="user" namespace="/" extends="struts-default">
	<interceptors>
		<interceptor name="myinterceptor" class="mypack.actions.MyInterceptor"/>
		<interceptor name="secondinterceptor" class="mypack.actions.MySecondInterceptor"/>
	</interceptors>
	
	<!-- Below action is used for default action. -->
	<action name="">
        <result>menu.jsp</result>
    </action>
    <action name="menu">
        <result>menu.jsp</result>
    </action>
    <action name="home">
        <result>login.jsp</result>
    </action>
    <action name="address">
        <result>address.jsp</result>
    </action>
    
    <action name="login" class="mypack.actions.LoginAction">
    	<interceptor-ref name="defaultStack"></interceptor-ref>
    	<interceptor-ref name="myinterceptor"></interceptor-ref>
    	<interceptor-ref name="secondinterceptor"></interceptor-ref>
    	<result name="SUCCESS">/welcome.jsp</result>
    	<result name="ERROR">/error.jsp</result>
    </action>
    
    <action name="address-action" class="mypack.actions.AddressAction">
    	<result name="success">/welcome.jsp</result>
    	<result name="ERROR">/error.jsp</result>
    </action>
 
</package>
 
</struts>